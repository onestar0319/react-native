    skip_processors = True,
    visibility = ["PUBLIC"],
    deps = [
        "//xplat/js:node_modules__nullthrows",
        "//xplat/js/RKJSModules/Libraries/Core:Core",
        "//xplat/js/RKJSModules/vendor/react:react",
